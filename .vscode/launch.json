  "version": "0.2.0",
  "configurations": [
    {
      "name": "(lldb) Launch Client",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/client/cliente",
      "args": ["4000"],
      "cwd": "${fileDirname}",    
      "preLaunchTask": "CMake: build",
    },
        {
      "name": "(lldb) Launch Server",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/server/servidor",
      "args": ["4000"],
      "cwd": "${fileDirname}",    
      "preLaunchTask": "CMake: build",
    },
  ],
  "compounds": [
    {
      "name": "Server + Client",
      "configurations": ["(lldb) Launch Client", "(lldb) Launch Server"]
    }
  ]
}
